{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "typeRoots": ["interfaces", "../node_modules/@types"],
    "paths": {
      "modules/*": ["modules/*"],
      "handlers/*": ["modules/handlers/*"],
      "helpers/*": ["modules/helpers/*"],
      "config": ["modules/config"],
      "tasks": ["modules/tasks"],
      "utils/*": ["modules/utils/*"]
    }
  },
  "include": ["**/*.ts"]
}
